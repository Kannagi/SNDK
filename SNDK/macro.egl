
.macro SNDK_memcopy

	idy =  $.arg1; 
	WMADD = idy;
	WMADDH = #.arg1;
	
	DMA_BANK_6 = #.arg2:;
	
	idy = $.arg2:;
	DMA_ADD_6 = idy;
	
	idy = .arg3;
	DMA_SIZE_6 = idy;
	
	MDMAEN = 0x40;

.endmacro

