.macro  SNDK_SendOAM

	idy = 0;
	OAMADD = idy;
	
	DMA_BANK_4 =  0x7E;
	
	idy = 0xD000;
	DMA_ADD_4 = idy;
	
	idy =  0x220;
	DMA_SIZE_4 = idy;
	
	MDMAEN = 0x10;
.endmacro

